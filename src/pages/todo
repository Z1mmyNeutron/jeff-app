   changeName=(val)=>{
       if ( val.length < 25 && /^[a-zA-Z\s]+$/.test( val) ) {
       this.setState({name:val})
}
  changeEmail=(val)=>{
      if( val.length <25 && /^[a-zA-Z\s]+s/.test( val ) ){
      this.setState({email:val})
      }
   }


